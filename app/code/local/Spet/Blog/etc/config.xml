<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <modules>
        <Spet_Blog>
            <version>1.0.0</version>
        </Spet_Blog>
    </modules>
    <frontend>
        <routers>
            <blog>
                <use>standard</use>
                <args>
                    <module>Spet_Blog</module>
                    <frontName>blog</frontName>
                </args>
            </blog>
        </routers>
        <layout>
            <updates>
                <spet_blog>
                    <file>spet_blog.xml</file>
                </spet_blog>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
            <spet_blog_setup>
                <setup>
                    <module>Spet_Blog</module>
                </setup>
            </spet_blog_setup>
        </resources>
        <blocks>
            <blog>
                <class>Spet_Blog_Block</class>
            </blog>
        </blocks>
        <models>
            <blog>
                <class>Spet_Blog_Model</class>
                <resourceModel>blog_resource</resourceModel>
            </blog>
            <blog_resource>
                <class>Spet_Blog_Model_Resource</class>
                <entities>
                    <articles>
                        <table>blog_posts</table>
                    </articles>
                    <customer>
                        <table>customer_entity</table>
                    </customer>
                </entities>
            </blog_resource>
        </models>
    </global>
</config>
